<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Basalam" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/blue_grey_300</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/font</item>
    </style>


    <style name="text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
        <item name="android:lineSpacingExtra">@dimen/_5dp</item>
        <!--        <item name="drawableTint">@color/icon</item>-->
        <!--        <item name="android:color">@color/black</item>-->

    </style>

    <style name="text.singleLine">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <style name="text.twoLine">
        <item name="android:maxLines">2</item>
        <item name="android:minLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="textAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textAppearance.size12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textAppearance.size14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textAppearance.size12.grey">
        <item name="android:textColor">@color/md_grey_700</item>
    </style>


    <style name="icon">
        <item name="tint">@color/icon</item>
        <!--        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>-->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="iconToolbar">
        <item name="android:tint">@color/icon</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/icon_size_large</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:layout_marginEnd">@dimen/spacing_xsmall</item>
    </style>

    <style name="icon.small">
        <item name="android:layout_height">@dimen/icon_size_xsmall</item>
        <item name="android:layout_width">@dimen/icon_size_xsmall</item>
    </style>

    <style name="icon.small.padding">
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="icon.normal">
        <item name="android:layout_height">@dimen/icon_size_normal</item>
        <item name="android:layout_width">@dimen/icon_size_normal</item>
    </style>

    <style name="icon.normal.padding">
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="icon.medium">
        <item name="android:layout_height">@dimen/icon_size_medium</item>
        <item name="android:layout_width">@dimen/icon_size_medium</item>
    </style>

    <style name="icon.medium.padding">
        <item name="android:padding">@dimen/padding_xsmall</item>
    </style>


    <style name="icon.normal.padding.unSelectableBackground">
        <item name="android:background">@null</item>
    </style>

    <style name="icon.large">
        <item name="android:layout_height">@dimen/icon_size_large</item>
        <item name="android:layout_width">@dimen/icon_size_large</item>
    </style>

    <style name="icon.large.padding">
        <item name="android:padding">@dimen/padding_normal</item>
    </style>

</resources>